<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.OrderReceipt" owl="1">
        <div class="pos-receipt">
            <t t-if="receipt.company.logo">
                <img class="pos-receipt-logo" t-att-src="receipt.company.logo" alt="Logo"/>
                <br/>
            </t>
            <t t-if="!receipt.company.logo">
                <h2 class="pos-receipt-center-align">
                    <t t-out="receipt.company.name" />
                </h2>
                <br/>
            </t>
            <div class="pos-receipt-contact">
                <t t-if="receipt.company.contact_address">
                    <div><t t-out="receipt.company.contact_address" /></div>
                </t>
                <t t-if="receipt.company.phone">
                    <div>Tel:<t t-out="receipt.company.phone" /></div>
                </t>
                <t t-if="receipt.company.vat">
                    <div><t t-out="receipt.company.vat_label"/>:<t t-out="receipt.company.vat" /></div>
                </t>
                <t t-if="receipt.company.email">
                    <div><t t-out="receipt.company.email" /></div>
                </t>
                <t t-if="receipt.company.website">
                    <div><t t-out="receipt.company.website" /></div>
                </t>
                <t t-if="receipt.header">
                    <div style="white-space:pre-line"><t t-out="receipt.header" /></div>
                </t>
                <t t-if="receipt.cashier">
                    <div class="cashier">
                        <div>--------------------------------</div>
                        <div>Served by <t t-out="receipt.cashier" /></div>
                    </div>
                </t>
            </div>
            <br /><br />

            <!-- Orderlines -->

            <div class="orderlines">
                <t t-call="point_of_sale.OrderLinesReceipt"/>
            </div>

            <!-- Subtotal -->

            <t t-if="!isTaxIncluded">
                <div class="pos-receipt-right-align">--------</div>
                <br/>
                <div>Subtotal<span t-out="env.utils.formatCurrency(receipt.subtotal)" class="pos-receipt-right-align"/></div>
                <t t-foreach="receipt.tax_details" t-as="tax" t-key="tax.name">
                    <div class="responsive-price">
                        <t t-out="tax.name" />
                        <span t-out='env.utils.formatCurrency(tax.amount, false)' class="pos-receipt-right-align"/>
                    </div>
                </t>
            </t>

            <!-- Total -->
            <div class="pos-receipt-right-align">--------</div>
            <br/>
            <div class="pos-receipt-amount">
                TOTAL
                <span t-out="env.utils.formatCurrency(receipt.total_with_tax)" class="pos-receipt-right-align"/>
            </div>
            <t t-if="receipt.total_rounded != receipt.total_with_tax">
                <div class="pos-receipt-amount">
                  Rounding
                <span t-out='env.utils.formatCurrency(receipt.rounding_applied)' class="pos-receipt-right-align"/>
                </div>
                <div class="pos-receipt-amount">
                  To Pay
                 <span t-out='env.utils.formatCurrency(receipt.total_rounded)' class="pos-receipt-right-align"/>
              </div>
            </t>
            <br/><br/>

            <!-- Payment Lines -->

            <t t-foreach="receipt.paymentlines" t-as="line" t-key="line.cid">
                <div>
                    <t t-out="line.name" />
                    <span t-out="env.utils.formatCurrency(line.amount, false)" class="pos-receipt-right-align"/>
                </div>
            </t>
            <br/>

            <div class="pos-receipt-amount receipt-change">
                CHANGE
                <span t-out="env.utils.formatCurrency(receipt.change)" class="pos-receipt-right-align"/>
            </div>
            <br/>

            <!-- Extra Payment Info -->

            <t t-if="receipt.total_discount">
                <div>
                    Discounts
                    <span t-out="env.utils.formatCurrency(receipt.total_discount)" class="pos-receipt-right-align"/>
                </div>
            </t>
            <t t-if="isTaxIncluded">
                <t t-foreach="receipt.tax_details" t-as="tax" t-key="tax.name">
                    <div>
                        <t t-out="tax.name" />
                        <span t-out="env.utils.formatCurrency(tax.amount, false)" class="pos-receipt-right-align"/>
                    </div>
                </t>
                <div id="post_receipt_taxes_container">
                    Total Taxes
                    <span t-out="env.utils.formatCurrency(receipt.total_tax)" class="pos-receipt-right-align"/>
                </div>
            </t>

            <div class="before-footer" />

            <div t-if="receipt.pos_qr_code">
                <br /><br />
                <div class="pos-receipt-order-data">
                    Scan me to request an invoice for your purchase.
                </div>
                <img id="posqrcode" t-att-src="receipt.pos_qr_code" class="pos-receipt-logo"/>
            </div>

            <div t-if="receipt.ticket_code">
                <br /><br />
                <div class="pos-receipt-order-data">
                    You can go to <t t-out="receipt.base_url"/>/pos/ticket and use the code below to request an invoice online
                </div>
                <div class="pos-receipt-order-data">
                    Unique Code: <t t-out="receipt.ticket_code"/>
                </div>
            </div>

            <!-- Footer -->
            <div t-if="receipt.footer"  class="pos-receipt-center-align" style="white-space:pre-line">
                <br/>
                <t t-out="receipt.footer" />
                <br/>
                <br/>
            </div>

            <div class="after-footer">
                <t t-foreach="receipt.paymentlines" t-as="line" t-key="line_index">
                    <t t-if="line.ticket">
                        <br />
                        <div class="pos-payment-terminal-receipt">
                            <pre t-out="line.ticket" />
                        </div>
                    </t>
                </t>
            </div>

            <br/>
            <t t-if="shippingDate">
                <div class="pos-receipt-order-data">
                    Expected delivery:
                    <div><t t-out="shippingDate" /></div>
                </div>
            </t>

            <br/>
            <div class="pos-receipt-order-data">
                <div><t t-out="receipt.name" /></div>
                <t t-if="receipt.date.localestring">
                    <div><t t-out="receipt.date.localestring" /></div>
                </t>
                <t t-else="">
                    <div><t t-out="receipt.date.validation_date" /></div>
                </t>
            </div>
        </div>
    </t>
    <t t-name="point_of_sale.OrderLinesReceipt" owl="1">
        <t t-foreach="receipt.orderlines" t-as="line" t-key="line.id">
            <t t-if="isSimple(line)">
                <div class="responsive-price">
                    <t t-out="line.product_name_wrapped[0]" />
                    <span t-out="env.utils.formatCurrency(line.price_display, false)" class="price_display pos-receipt-right-align"/>
                </div>
                <WrappedProductNameLines line="line" />
            </t>
            <t t-else="">
                <div t-out="line.product_name_wrapped[0]" />
                <WrappedProductNameLines line="line" />
                <t t-if="line.display_discount_policy == 'without_discount' and line.price != line.price_lst">
                    <div class="pos-receipt-left-padding">
                        <t t-out="env.utils.formatCurrency(line.price_lst, false)" />
                        ->
                        <t t-out="env.utils.formatCurrency(line.price, false)" />
                    </div>
                </t>
                <t t-elif="line.discount !== 0">
                    <div class="pos-receipt-left-padding">
                        <t t-if="pos.globalState.config.iface_tax_included === 'total'">
                            <t t-out="env.utils.formatCurrency(line.price_with_tax_before_discount, false)"/>
                        </t>
                        <t t-else="">
                            <t t-out="env.utils.formatCurrency(line.price, false)"/>
                        </t>
                    </div>
                </t>
                <t t-if="line.discount !== 0">
                    <div class="pos-receipt-left-padding">
                        Discount: <t t-out="line.discount" />%
                    </div>
                </t>
                <div class="pos-receipt-left-padding">
                    <t t-out="Math.round(line.quantity * Math.pow(10, pos.globalState.dp['Product Unit of Measure'])) / Math.pow(10, pos.globalState.dp['Product Unit of Measure'])"/>
                    <t t-if="!line.is_in_unit" t-out="line.unit_name" />
                    x
                    <t t-out="env.utils.formatCurrency(line.price_display_one)" />
                    <span class="price_display pos-receipt-right-align">
                        <t t-out="env.utils.formatCurrency(line.price_display, false)" />
                    </span>
                </div>
            </t>
            <t t-if="line.customer_note">
                <div class="pos-receipt-left-padding pos-receipt-customer-note">
                    <t t-out="line.customer_note"/>
                </div>
            </t>
            <t t-if="line.pack_lot_lines">
                <div class="pos-receipt-left-padding">
                    <ul>
                        <t t-foreach="line.pack_lot_lines" t-as="lot" t-key="lot.cid">
                            <li>
                                SN <t t-out="lot.lot_name"/>
                            </li>
                        </t>
                    </ul>
                </div>
            </t>
        </t>
    </t>

</templates>

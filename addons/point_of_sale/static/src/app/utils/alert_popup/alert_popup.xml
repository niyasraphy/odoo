<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.AlertPopup" owl="1">
        <div class="popup">
            <p class="title">
                <t t-out="props.title" />
            </p>
            <p class="body">
                <t t-out="props.body" />
            </p>
            <div class="footer">
                <div class="button cancel" t-on-click="confirm">
                    <t t-out="props.confirmText" />
                </div>
            </div>
        </div>
    </t>
</templates>

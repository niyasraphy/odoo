<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.TextInputPopup" owl="1">
            <div class="popup popup-textinput">
                <header class="title">
                    <t t-out="props.title" />
                </header>
                <main>
                    <p t-out="props.body" />
                    <input type="text" t-model="state.inputValue" t-ref="input" t-att-placeholder="props.placeholder"/>
                </main>
                <div class="footer footer-flex">
                    <div class="button confirm highlight" t-on-click="confirm">
                        <t t-out="props.confirmText" />
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        <t t-out="props.cancelText" />
                    </div>
                </div>
            </div>
    </t>

</templates>

<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.OrderChangeReceipt" owl="1">
        <div class="pos-receipt">
            <div class="pos-receipt-order-data"><t t-out="changes.name" /></div>
            <t t-if="changes.floor_name || changes.table_name">
                <br />
                <div class="pos-receipt-title">
                    <t t-out="changes.floor_name" /> / <t t-out="changes.table_name"/>
                </div>
            </t>
            <br />
            <br />
            <t t-if="changes.cancelled.length > 0">
                <div class="pos-order-receipt-cancel">
                    <div class="pos-receipt-title">
                        CANCELLED
                        <t t-out='changes.time.hours'/>:<t t-out='changes.time.minutes'/>
                    </div>
                    <br />
                    <br />
                    <t t-foreach="changes.cancelled" t-as="change" t-key="change_index">
                        <div class="multiprint-flex">
                            <span class="product-quantity" t-out="change.quantity"/>
                            <span class="product-name" t-out="change.name"/>
                        </div>
                        <t t-if="change.note">
                            <div>
                                NOTE
                                <span class="pos-receipt-right-align">...</span>
                            </div>
                            <div><span class="pos-receipt-left-padding">--- <t t-out="change.note" /></span></div>
                            <br/>
                        </t>
                    </t>
                    <br />
                    <br />
                </div>
            </t>
            <t t-if="changes.new.length > 0">
                <div class="pos-receipt-title">
                    NEW
                    <t t-out='changes.time.hours'/>:<t t-out='changes.time.minutes'/>
                </div>
                <br />
                <br />
                <t t-foreach="changes.new" t-as="change" t-key="change_index">
                    <div class="multiprint-flex">
                        <span class="product-quantity" t-out="change.quantity"/>
                        <span class="product-name" t-out="change.name"/>
                    </div>
                    <t t-if="change.note">
                        <div>
                            NOTE
                            <span class="pos-receipt-right-align">...</span>
                        </div>
                        <div><span class="pos-receipt-left-padding">--- <t t-out="change.note" /></span></div>
                        <br/>
                    </t>
                </t>
                <br />
                <br />
            </t>
        </div>
    </t>

</templates>

<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <template id='mercury_common'>
      <MerchantID><t t-out='merchant_id'/></MerchantID>
      <TranType><t t-out='transaction_type'/></TranType>
      <TranCode><t t-out='transaction_code'/></TranCode>
      <InvoiceNo><t t-out='invoice_no'/></InvoiceNo>
      <Frequency t-translation="off">OneTime</Frequency>
    </template>

    <template id='mercury_transaction'>
      <TStream t-translation="off">
        <Transaction>
          <t t-call='pos_mercury.mercury_common'/>
          <OperatorID><t t-out='operator_id'/></OperatorID>
          <RecordNo>RecordNumberRequested</RecordNo>
          <PartialAuth>Allow</PartialAuth>
          <Memo><t t-out='memo'/></Memo>
          <Account>
            <AccountSource>Swiped</AccountSource>
            <EncryptedBlock><t t-out='encrypted_block'/></EncryptedBlock>
            <EncryptedKey><t t-out='encrypted_key'/></EncryptedKey>
            <EncryptedFormat>MagneSafe</EncryptedFormat>
          </Account>
          <Amount>
            <Purchase><t t-out='"%.2f" % purchase'/></Purchase> <!-- format required by Vantiv -->
          </Amount>
        </Transaction>
      </TStream>
    </template>

    <template id='mercury_voidsale'>
      <TStream t-translation="off">
        <Transaction>
          <t t-call='pos_mercury.mercury_common'/>
          <RefNo><t t-out='ref_no'/></RefNo>
          <RecordNo><t t-out='record_no'/></RecordNo>
          <Memo><t t-out='memo'/></Memo>
          <Amount>
            <Purchase><t t-out='"%.2f" % authorize'/></Purchase> <!-- format required by Vantiv -->
          </Amount>
          <TranInfo>
            <AuthCode><t t-out='auth_code'/></AuthCode>
            <t t-if='not is_voidsale'>
              <AcqRefData><t t-out='acq_ref_data'/></AcqRefData>
              <ProcessData><t t-out='process_data'/></ProcessData>
            </t>
          </TranInfo>
        </Transaction>
      </TStream>
    </template>

    <template id='mercury_return'>
      <TStream t-translation="off">
        <Transaction>
          <t t-call='pos_mercury.mercury_common'/>
          <OperatorID><t t-out='operator_id'/></OperatorID>
          <PartialAuth>Allow</PartialAuth>
          <RefNo><t t-out='ref_no'/></RefNo>
          <RecordNo><t t-out='record_no'/></RecordNo>
          <Amount>
            <Purchase><t t-out='"%.2f" % purchase'/></Purchase>
          </Amount>
        </Transaction>
      </TStream>
    </template>
  </data>
</odoo>
